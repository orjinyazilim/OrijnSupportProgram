@model TbCrmUser
@{
    ViewData["Title"] = "Kullanıcı Girişi";
    Layout = null;
}

<!doctype html>
<html class="no-js" lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- favicon
		============================================ -->
    <link rel="shortcut icon" type="image/x-icon" href="img/support_icon.png">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css"/>
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" href="css/login.css"/>
    <!-- Alert Css -->
    <link rel="stylesheet" href="css/alert.css"/>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
        
</head>
<body>
<div>
    <div class="wrapper">
        <h1 style="text-align: center ; margin-top: 10px"><span class="table-project-n text-info" >Orjin</span> Yazılım </h1>
        <div class="logo">
            <img src="img/customer-support.png" alt="">
        </div>
        <div class="text-center mt-4 name">
            Destek Programı
        </div>
        <form class="p-3 mt-3" name="loginForm">
            <div class="form-field d-flex align-items-center">
                <span class="far fa-user"></span>
                <input type="text" asp-for="UserCode"  name="UserCode" id="UserCode" placeholder="Kullanıncı No" autocomplete="off">
            </div>
            <div class="form-field d-flex align-items-center">
                <span class="fas fa-key"></span>
                <input type="password" asp-for="UserPassword" name="UserPassword"  id="UserPassword" placeholder="Şifre">
            </div>
            <button onclick="getUser()" class="btn mt-3">GİRİŞ YAP</button>
        </form>
    </div>
</div>
<script src="js/cute-alert.js"></script>
<script src="js/login.js"></script>
@if (TempData["Failure"]!=null)
	{
	    <script type="text/javascript">
	    cuteAlert({
                      type: "error",
                      title: "Hata",
                      message: "@TempData["Failure"]",
                      buttonText: "Tamam",
                    })
                                   	
        </script>
	}
@if (TempData["Success"]!=null)
	{
	    <script type="text/javascript">
	    cuteAlert({
                      type: "success",
                      title: "Başarılı",
                      message: "@TempData["Success"]",
                      buttonText: "Tamam",
                    })               	
        </script>
	}
</body>
</html>